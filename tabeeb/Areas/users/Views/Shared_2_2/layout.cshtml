@using tabeeb.Controllers;
@{
    string phoneNumber = "19666";
    string lange = Session["usersPageLang"].ToString();
    string dir =(lange=="ar")?"rtl":"ltr";
}
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @{Html.RenderPartial("headContent",lange);}
</head>
<body dir="@dir" onload='@{Write("getStart('"+ViewBag.controller+"')");}' lang="@lange">
    <header>
        <!--start option box-->
        @{/*Html.RenderPartial("colorBox");*/}
        <!--end option box-->
        <!--the top navbar-->
        <section class="top-nav text-center">
            <div class="container-fluid">
                <div class="row center-block">
                    <div class="col-sm-3 col-xs-12 log">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="not-loged">
                                <a href="/users/patient/login">@Resource1.login</a>
                                <span>أو</span>
                                <a href="/users/patient/register" class="main-color">@Resource1.signUp</a>
                            </div>
                        }
                        else
                        {
                            <div class="loged">
                                <p>
                                    <i class="glyphicon glyphicon-user fa-lg"></i>
                                    <span class="name">@User.Identity.Name</span>
                                </p>
                                <div class="profile">
                                    <ul class="list-unstyled">
                                        <li><a href="/users/patient/profile"><i class="fa fa-user"></i>@Resource1.profilePage</a></li>
                                        <li><a href="/users/patient/appointements"><i class="fa fa-calendar-check-o fa-lg"></i>@Resource1.myAppointement</a></li>
                                        <li><a href="/users/patient/logout"><i class="glyphicon glyphicon-log-out"></i>@Resource1.logOut</a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        <div><span class="main-color">@Resource1.tabeebak</span> @Resource1.withYouAnyWhere</div>
                    </div>
                    <div class="col-sm-6 col-xs-12 call-div">
                        <div>
                            @Resource1.forCallUs @phoneNumber
                            <i class="fa fa-phone fa-2x main-color"></i>
                        </div>
                        <div class="pull-center">
                            <div class="logo wow bounceInUp" data-wow-duration='2s'>
                                <a href="/"><img src="~/icon/logo.png"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--the end of top navbar-->
        <!--start second nav bar-->
        <div class="header">
            @if(lange=="ar")
            {
            <nav class="cd-main-nav-wrapper">
                <ul class="cd-main-nav">
                    <li><a href="/">الرئيسية</a></li>
                    <li><a href="/users/index/changeLanguage?lang=en">English</a></li>
                    <li class="subPage" onclick="location.href = '/users/index/index/#ourServices'; handleLocations();"><a href="">خدماتنا</a></li>
                    <li class="subPage" onclick="location.href = '/users/index/index/#aboutSelf';handleLocations();"><a href=''>من نحن</a></li>
                    <li class="subPage" onclick="location.href = '/users/index/index/#callUs'; handleLocations();"><a href="" class="callUsLink">اتصل بنا</a></li>
                    <li><a target="_blank" href="/@globalController.defaultPathForDoctorsArea">صفحة الاطباء</a></li>
                    <li class="otherPages">
                        <a href="#" class="cd-subnav-trigger"><span>صفحات اخرى</span></a>
                        <ul>
                            <li class="go-back"><a href="#">صفحات أخرى</a></li>
                            <li><a href="/users/specialities/specialities">التخصصات</a></li>
                            <li><a href="/users/search/search">البحث</a></li>
                            <li><a href="/users/advices/advices">نصائح الاطباء</a></li>
                            <li><a href="/users/index/privacy#privacySection">سياسة الخصوصية</a></li>
                        </ul>
                    </li>
                </ul> <!-- .cd-main-nav -->
            </nav> <!-- .cd-main-nav-wrapper -->
            }
            else
            {
             <nav class="cd-main-nav-wrapper">
                <ul class="cd-main-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/users/index/changeLanguage?lang=ar">العربية</a></li>
                    <li class="subPage" onclick="location.href = '/users/index/index/#ourServices'; handleLocations();"><a href="">Our Services</a></li>
                    <li class="subPage" onclick="location.href = '/users/index/index/#aboutSelf';handleLocations();"><a href=''>About Us</a></li>                    
                    <li class="subPage" onclick="location.href = '/users/index/index/#callUs'; handleLocations();"><a href="" class="callUsLink">Call Us</a></li>
                    <li><a target="_blank" href="/doctors">Doctors Page</a></li>
                    <li class="otherPages">
                        <a href="#" class="cd-subnav-trigger"><span>Other Pages</span></a>
                        <ul>
                            <li class="go-back"><a href="#">Other Pages</a></li>
                            <li><a href="/users/specialities/specialities">Specialities</a></li>
                            <li><a href="/users/search/search">Search</a></li>
                            <li><a href="/users/advices/advices">Doctor Advices</a></li>
                            <li><a href="/users/index/privacy">Privacy</a></li>
                        </ul>
                    </li>
                </ul> <!-- .cd-main-nav -->
            </nav> <!-- .cd-main-nav-wrapper -->   
            }
            <a href="#0" class="cd-nav-trigger">
                <span></span>
            </a>
        </div>
        <!--end of second  nav bar-->
    </header>
    <!--end of header-->
    @RenderSection("reserving", required: false) 
    <div class="bodyOfPage">
        @RenderBody()
    </div>
    <!--start fooetr-->
    @{Html.RenderPartial("footerAr");}
    <!--end footer-->
</body>

</html>
